{
  "name": "@dsqr/bucees",
  "version": "0.0.0",
  "description": "Utilities for Advent of Code puzzle solving",
  "type": "module",
  "sideEffects": false,
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/0xdsqr/aoc-2025"
  },
  "scripts": {
    "build": "bun run ./scripts/build.ts",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage"
  },
  "devDependencies": {
    "typescript": "5.8.3"
  },
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "types": "./src/index.ts"
    },
    "./read-input": {
      "import": "./dist/esm/read-input.js",
      "types": "./src/read-input.ts"
    },
    "./cli": {
      "import": "./dist/esm/cli/aoc-cli.js",
      "types": "./src/cli/aoc-cli.ts"
    },
    "./*": {
      "import": "./dist/esm/*.js",
      "types": "./src/*.ts"
    }
  },
  "files": [
    "src",
    "dist"
  ],
  "dependencies": {
    "@aoc/tsconfig": "workspace:*"
  }
}